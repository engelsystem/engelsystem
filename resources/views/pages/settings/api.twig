{% extends 'pages/settings/settings.twig' %}
{% import 'macros/form.twig' as f %}

{% block title %}{{ __('settings.api') }}{% endblock %}

{% block row_content %}

    <div content="row">
        <div class="col-md-12">

            {{ f.button(
                __('settings.api.key_show'),
                {'size': 'sm', 'icon_left': 'key', 'attr': {
                    'data-bs-toggle': 'collapse', 'data-bs-target': '#key_hide',
                    'aria-expanded': 'true', 'aria-controls': 'key_hide'
                }}
            ) }}

            {% if can('shifts_json_export') %}
                {{ f.button(
                    __('settings.api.shifts_json_show'),
                    {'size': 'sm', 'icon_left': 'braces', 'attr': {
                        'data-bs-toggle': 'collapse', 'data-bs-target': '#shifts_json_hide',
                        'aria-expanded': 'true', 'aria-controls': 'shifts_json_hide'
                    }}
                ) }}
            {% endif %}

            {% if can('ical') %}
                {{ f.button(
                    __('settings.api.ical_show'),
                    {'size': 'sm', 'icon_left': 'calendar-week', 'attr': {
                        'data-bs-toggle': 'collapse', 'data-bs-target': '#ical_hide',
                        'aria-expanded': 'true', 'aria-controls': 'ical_hide'
                    }}
                ) }}
            {% endif %}

            {% if can('atom') %}
                {{ f.button(
                    __('settings.api.news_show'),
                    {'size': 'sm', 'icon_left': 'calendar-week', 'attr': {
                        'data-bs-toggle': 'collapse', 'data-bs-target': '#news_hide',
                        'aria-expanded': 'true', 'aria-controls': 'news_hide'
                    }}
                ) }}
            {% endif %}

            <form method="post" class="d-inline">
                {{ csrf() }}
                {{ f.submit(
                    __('settings.api.key_reset'),
                    {
                        'size': 'sm', 'btn_type': 'danger',
                        'icon_left': 'arrow-repeat', 'confirm_text': __('settings.api.key_reset_confirm')
                    }
                ) }}
            </form>

        </div>

        <div class="col-md-12 pt-2" id="exports_hide">

            <p id="key_hide" class="collapse" data-bs-parent="#exports_hide">
                <code>{{ user.api_key }}</code>
            </p>

            {% if can('shifts_json_export') %}
                <p id="shifts_json_hide" class="collapse" data-bs-parent="#exports_hide">
                    <code>{{ url('/shifts-json-export', {'key': user.api_key}) }}</code>
                </p>
            {% endif %}

            {% if can('ical') %}
                <div id="ical_hide" class="collapse" data-bs-parent="#exports_hide">
                    {% set icalParams = {'key': user.api_key} %}
                    {% if ical_alarm_enabled and ical_alarm_minutes > 0 %}
                        {% set icalParams = icalParams|merge({'alarm': ical_alarm_minutes}) %}
                    {% endif %}
                    <p>
                        <code id="ical-url">{{ url('/ical', icalParams) }}</code>
                    </p>
                    <form method="get" action="{{ url('/settings/api') }}" class="mt-2" id="ical-alarm-form">
                        <div class="d-flex align-items-center gap-2 flex-wrap">
                            <div class="form-check mb-0">
                                <input type="checkbox" class="form-check-input" name="ical_alarm_enabled"
                                    id="ical_alarm_enabled" value="1"
                                    {% if ical_alarm_enabled %}checked{% endif %}>
                                <label class="form-check-label" for="ical_alarm_enabled">
                                    {{ __('settings.api.ical_alarm_notify') }}
                                </label>
                            </div>
                            <input type="number" class="form-control form-control-sm"
                                style="width: 80px" name="ical_alarm_minutes" id="ical_alarm_minutes"
                                value="{{ ical_alarm_minutes }}" min="1" max="1440">
                            <span>{{ __('settings.api.ical_alarm_minutes') }}</span>
                            <button type="submit" class="btn btn-sm btn-primary" id="ical-update-btn">
                                {{ __('settings.api.ical_update_url') }}
                            </button>
                        </div>
                    </form>
                    <script>
                        (function() {
                            const form = document.getElementById('ical-alarm-form');
                            const btn = document.getElementById('ical-update-btn');
                            const urlEl = document.getElementById('ical-url');
                            const checkbox = document.getElementById('ical_alarm_enabled');
                            const minutes = document.getElementById('ical_alarm_minutes');
                            const baseUrl = '{{ url('/ical', {'key': user.api_key}) }}';

                            btn.style.display = 'none';

                            function updateUrl() {
                                if (checkbox.checked && minutes.value > 0) {
                                    urlEl.textContent = baseUrl + '&alarm=' + minutes.value;
                                } else {
                                    urlEl.textContent = baseUrl;
                                }
                            }

                            checkbox.addEventListener('change', updateUrl);
                            minutes.addEventListener('input', updateUrl);
                        })();
                    </script>
                </div>
            {% endif %}

            {% if can('atom') %}
                <p id="news_hide" class="collapse" data-bs-parent="#exports_hide">
                    <code>{{ url('/atom', {'key': user.api_key}) }}</code>
                    {% if can('user_meetings') %}
                        <br><code>{{ url('/atom', {'meetings': 1, 'key': user.api_key}) }}</code>
                    {% endif %}
                    <br><code>{{ url('/rss', {'key': user.api_key}) }}</code>
                    {% if can('user_meetings') %}
                        <br><code>{{ url('/rss', {'meetings': 1, 'key': user.api_key}) }}</code>
                    {% endif %}
                </p>
            {% endif %}

        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {% if can('api') %}
                {{ __('settings.api.about', [
                    config('app_name'),
                    url('/api/v0-beta'),
                    url('/api/v0-beta/openapi')
                ])|markdown|nl2br }}
            {% endif %}

            {{ __('settings.api.about.warning')|markdown|nl2br }}
        </div>
    </div>

{% endblock %}
