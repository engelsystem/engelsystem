{% extends 'layouts/app.twig' %}
{% import 'macros/base.twig' as m %}

{% block title %}{{ __(title|default(__('settings.settings'))) }}{% endblock %}

{% block content %}
    <div class="container user-settings">
        {% block container_title %}
            <h1>{{ __('settings.settings') }} <small>{{ block('title') }}</small></h1>
        {% endblock %}

        <div class="row">
            <div class="col-md-3 settings-menu">
                <ul class="nav nav-pills nav-stacked">
                    {% for url,title in {
                        (url('/user-settings')): __('settings.profile'),
                        (url('/settings/password')): __('settings.password'),
                        (url('/settings/oauth')): __('settings.oauth'),
                    } %}
                        <li{% if url == request.url() %} class="active"{% endif %}>
                            <a href="{{ url }}">{{ title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-md-9">
                {% include 'layouts/parts/messages.twig' %}

                {% block row_content %}
                    {{ content|raw }}
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
