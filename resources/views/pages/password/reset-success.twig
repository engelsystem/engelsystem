{% extends "pages/password/reset.twig" %}
{% import 'macros/base.twig' as m %}

{% block row_content %}
    <div class="col-md-12">
        {% if type == 'email' %}
            {{ m.alert(__('password.recovery.success'), 'info') }}
        {% elseif type == 'reset' %}
            {{ m.alert(__('settings.password.success'), 'success') }}
        {% endif %}
    </div>
{% endblock %}
