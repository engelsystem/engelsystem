{% extends 'layouts/app.twig' %}
{% import 'macros/base.twig' as m %}
{% import 'macros/form.twig' as f %}

{% block title %}{{ __('guardian.edit_minor') }} - {{ minor.name }}{% endblock %}

{% block content %}
<div class="container">
    {% include 'layouts/parts/messages.twig' %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ m.icon('pencil') }} {{ __('guardian.edit_minor') }}: {{ minor.name }}</h1>
        <a href="{{ url('/guardian/minor/' ~ minor.id) }}" class="btn btn-outline-secondary">
            {{ m.icon('arrow-left') }} {{ __('guardian.back_to_profile') }}
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    {{ __('guardian.edit_profile') }}
                </div>
                <div class="card-body">
                    <form action="{{ url('/guardian/minor/' ~ minor.id ~ '/edit') }}" method="post">
                        {{ csrf() }}

                        <h5>{{ __('guardian.contact_info') }}</h5>

                        {{ f.input('email', __('form.email'), {
                            'type': 'email',
                            'value': minor.email,
                        }) }}

                        <h5 class="mt-4">{{ __('guardian.personal_data') }}</h5>

                        <div class="row">
                            <div class="col-md-6">
                                {{ f.input('first_name', __('settings.profile.firstname'), {
                                    'maxlength': 64,
                                    'value': minor.personalData.first_name,
                                }) }}
                            </div>
                            <div class="col-md-6">
                                {{ f.input('last_name', __('settings.profile.lastname'), {
                                    'maxlength': 64,
                                    'value': minor.personalData.last_name,
                                }) }}
                            </div>
                        </div>

                        {{ f.input('pronoun', __('settings.profile.pronoun'), {
                            'maxlength': 15,
                            'value': minor.personalData.pronoun,
                            'info': __('settings.profile.pronoun.info'),
                        }) }}

                        <div class="mt-4">
                            {{ f.submit(__('form.save'), {'icon_left': 'check-lg'}) }}
                            <a href="{{ url('/guardian/minor/' ~ minor.id) }}" class="btn btn-outline-secondary">
                                {{ __('form.cancel') }}
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    {{ m.icon('info-circle') }} {{ __('guardian.edit_info') }}
                </div>
                <div class="card-body">
                    <p>{{ __('guardian.edit_info_1') }}</p>
                    <p class="mb-0">{{ __('guardian.edit_info_2') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
